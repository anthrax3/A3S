<settings>
    <servers>
        <server>
            <id>ossrh</id>
            <!-- from https://stackoverflow.com/a/28074776/1319337 -->
            <!-- ossrh username/password                           -->
            <!-- can now be specified using mvn flag of            -->
            <!-- mvn -s <this settings file> \                     -->
            <!-- -Dossrh.repo.jira-id=some_username \          -->
            <!-- -Dossrh.repo.jira-pwd=some_password \         -->
            <!---    ...etc. etc. etc.                             -->
            <!-- <username>${ossrh.repo.jira-id}</username>
            <password>${ossrh.repo.jira-pwd}</password> -->
            <username>grindrod-appdev</username>
            <password>${env.OSSRH_PASSWORD}</password>
        </server>
    </servers>
    <profiles>
        <profile>
            <id>ossrh</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <gpg.passphrase>${env.GPG_PASSPHRASE}</gpg.passphrase>
                <gpg.keyname>44F1405FA941B8744A93FF5CE02AE26B30F5F718</gpg.keyname>
                <!-- <gpg.passphraseServerId>${gpg.keyname}</gpg.passphraseServerId>
                <gpg.defaultKeyring>false</gpg.defaultKeyring> -->
            </properties>
        </profile>
    </profiles>
        <activeProfiles>
        <activeProfile>ossrh</activeProfile>
    </activeProfiles>
</settings>